@Scripts.Render("~/bundles/jqueryform")
@Scripts.Render("~/bundles/jcrop")
@Scripts.Render("~/bundles/slide")
@Styles.Render("~/Content/jcrop")
@Styles.Render("~/Content/slide")
<div class="container">

    <section id="avatar-upload-box">
        @using (Ajax.BeginForm("_UploadGalleria", "Image",
                                    new AjaxOptions() { HttpMethod = "POST" },
                                    new { enctype = "multipart/form-data", id = "avatar-upload-form" }))
        {
            @Html.AntiForgeryToken()
            <input type="file" name="files" class="alert alert-success" /><br>
            <div class="upload-file-notice">Dimensione massima file: <span id="avatar-max-size"></span> MB</div>
        }
        <p id="eid" class="hidden">@ViewBag.Eid</p>
        <p id="id" class="hidden">@ViewBag.Id</p>
        <div class="upload-progress col-md-6 hidden">
            <div class="upload-percent-value pull-left">0%</div>
            <div class="upload-percent-bar pull-left"></div>
        </div>
        <div id="upload-status"></div>
    </section>
    <section id="avatar-crop-box" class="hidden">
        <p>
            <img src="" id="crop-avatar-target" alt="Uploaded image" />
            <button class="btn btn-primary btn-slide" onclick=" saveGalleria() ">Salva immagine in galleria</button>
        </p>
        <div id="preview-pane">
            <div class="preview-container">
                <img src="" class="jcrop-preview" alt="Preview" />
            </div>
        </div>
    </section>
    <div id="avatar-result" class="hidden">
        <img class="img-responsive" src="" alt="Final Image" />
        <a href="@Url.Action("Evento", "Home", new {id = @ViewBag.Id })" class="btn btn-success btn-slide-fatto">Fatto</a>
    </div>
    <div>
    </div>
</div>
