@model FiordilotoMVC.Models.EditUserViewModel

@{
    ViewBag.Title = "Gestione utenti";
}

<h2>@ViewBag.Title</h2>

<h4>Modifica</h4>
<hr class="hr1" />
<div class="row">
    <div class="col col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        @Html.Label("Roles", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @foreach (var item in Model.RolesList)
                {
                                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                        @Html.Label(item.Value, new { @class = "control-label" })<br />

                            }
                        </div>


                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salva" class="btn btn-success" />
                        @Html.ActionLink("Lista utenti", "Index", null, new { @class = "btn btn-danger" })<br />

                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('.datepicker').datepicker("option", "dateFormat", "dd/mm/yyyy");
    </script>

}


